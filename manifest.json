{
  "manifest_version": 3,
  "name": "Zero-Latency Anime Tab",
  "version": "1.0.0",
  "description": "A lightning-fast Chrome extension that replaces your new tab with beautifully preloaded anime artwork.",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Anime Tab Settings"
  },
  "permissions": ["storage", "unlimitedStorage"],
  "host_permissions": ["https://api.nekosia.cat/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
